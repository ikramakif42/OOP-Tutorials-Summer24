        <GridPane alignment="center" hgap="10" layoutX="12.0" layoutY="34.0" prefHeight="223.0" prefWidth="195.0" vgap="10" xmlns:fx="http://javafx.com/fxml">


            <!-- TextField for the display -->
            <TextField fx:id="display" editable="false" style="-fx-font-size: 20;" GridPane.columnSpan="4" />

            <!-- Row 1 -->
            <Button onAction="#handleButtonAction" text="7" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Button onAction="#handleButtonAction" text="8" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button onAction="#handleButtonAction" text="9" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Button onAction="#handleButtonAction" text="/" GridPane.columnIndex="3" GridPane.rowIndex="1" />

            <!-- Row 2 -->
            <Button onAction="#handleButtonAction" text="4" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <Button onAction="#handleButtonAction" text="5" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Button onAction="#handleButtonAction" text="6" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <Button onAction="#handleButtonAction" text="*" GridPane.columnIndex="3" GridPane.rowIndex="2" />

            <!-- Row 3 -->
            <Button onAction="#handleButtonAction" text="1" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <Button onAction="#handleButtonAction" text="2" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Button onAction="#handleButtonAction" text="3" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <Button onAction="#handleButtonAction" text="-" GridPane.columnIndex="3" GridPane.rowIndex="3" />

            <!-- Row 4 -->
            <Button maxWidth="Infinity" onAction="#handleButtonAction" text="0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" />
            <Button onAction="#handleButtonAction" text="." GridPane.columnIndex="2" GridPane.rowIndex="4" />
            <Button onAction="#handleButtonAction" text="+" GridPane.columnIndex="3" GridPane.rowIndex="4" />

            <!-- Row 5 -->
            <Button maxWidth="Infinity" onAction="#handleButtonAction" text="C" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <Button maxWidth="Infinity" onAction="#handleButtonAction" text="=" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="5" />
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
